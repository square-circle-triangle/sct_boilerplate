<form method="POST" action="<%= form_action_url("Detailed registration") %>" id="register" class="standard_form">

	<div class="input third biline">
		<label for="first_name">First name <abbr title="required">*</abbr></label>
		<input id="first_name" type="text" value="" class="required" name="first_name">
	</div>

	<div class="input third biline">
		<label for="last_name">Last name <abbr title="required">*</abbr></label>
		<input id="last_name" type="text" value="" class="required" name="first_name">
	</div>

	<div class="input third biline">
		<label for="email">Email <abbr title="required">*</abbr></label>
		<input id="email" type="text" value="" class="email required" name="email">	
	</div>

	<div class="clearfix"></div>

	<div class="input third biline">
		<label for="work_phone">Work phone</label>
		<input id="work_phone" type="text" value="" class="" name="work_phone">
	</div>

	<div class="input third biline">
		<label for="home_phone">Home phone</label>
		<input id="home_phone" type="text" value="" class="" name="home_phone">
	</div>

	<div class="input third biline">
		<label for="mobile">Mobile phone</label>
		<input id="mobile" type="text" value="" class="" name="mobile">
	</div>

	<div class="clearfix"></div>

	<div class="input third biline">
		<label for="age_group">Age group</label>
		<% ops = ["Not specified","24 and under","25-34","35-44","45-54","55-64","65 and over"] %>
		<%= select_tag :age_group, options_for_select(ops) %>
	</div>

	<fieldset>
		<legend>Address</legend>

		<div class="input twothirds biline">
			<label for="address">Street Address <abbr title="required">*</abbr></label>
			<input id="address" type="text" value="" class="required" name="address">					
		</div>

		<div class="input third biline">
			<label for="suburb">Suburb <abbr title="required">*</abbr></label>
			<input id="suburb" type="text" value="" class="required" name="suburb">					
		</div>

		<div class="clearfix"></div>
	
		<div class="input third biline">
			<label for="postcode">Postcode <abbr title="required">*</abbr></label>
			<input id="postcode" type="text" value="" class="required" name="postcode">					
		</div>
		
		<div class="input third biline">
			<label for="country">Country <abbr title="required">*</abbr></label>
			<input id="country" type="text" value="" class="required" name="country">					
		</div>

		<div class="input third biline">
			<label for="input_state">State</label>
			<% ops = ['ACT', 'NSW', 'NT', 'QLD' , 'SA', 'TAS', 'VIC' , 'WA'] %>
			<%= select_tag :input_state, options_for_select(ops) %>
		</div>

	</fieldset>

	<div class="input half biline">
		<label for="prefered_contact">How would you like to receive brochures and information?</label>
		<% ops=["Email","Post Mail"] %>
		<%= select_tag :prefered_contact, options_for_select(ops) %>
	</div>

	<div class="input twothirds biline">
		<label for="preferred_contact_time">When would you prefer to be contacted? <span class="tip">e.g. call between 9-5 mon-fri</span></label>
		<input id="preferred_contact_time" type="text" value="" class="" name="preferred_contact_time">
	</div>

	<fieldset>
		<legend>Bedrooms</legend>
		<%= ops=[2,3,4] %>
		<div class="input third biline">
			<label for="bed_min">Min bedrooms</label>
			<%= select_tag :bed_min, options_for_select(ops) %>
		</div>
		<div class="input third biline">
			<label for="bed_max">Max bedrooms</label>
			<%= select_tag :bed_max, options_for_select(ops) %>
		</div>
	</fieldset>

	<fieldset>
		<legend>Price Range</legend>
		<%
			ops = []
			ops<< "500-750k"
			ops<< "750-1M"
			ops<< "1M-1.25M"
		%>
		<div class="input third biline">
			<label for="price_range_min">Minimun</label>
			<%= select_tag :price_range_min, options_for_select(ops) %>
		</div>
		<div class="input third biline">
			<label for="price_range_max">Maximum</label>
			<%= select_tag :price_range_max, options_for_select(ops) %>
		</div>
	</fieldset>

	<fieldset>
		<legend>How did you become aware of Array?</legend>
		<%
			ops = []

			ops << "Mirvac Website"
			ops << "Search Engine"
			ops << "Sales Office"

			ops << "Email from Mirvac"
			ops << "Newspaper - Metro"
			ops << "Event"

			ops << "Local Resident"
			ops << "Newspaper - Local"
			ops << "Word of Mouth / Recommendation"

			ops << "domain.com.au"
			ops << "Onsight signage"
			ops << "Previous purchaser"

			ops << "realestate.com.au"
			ops << "Offsite signage"
			%>
	
		<% ops.each_with_index do |op,ix| %>
				<div class="input third checkbox">
					<label><%= op %></label>
					<div class="faux_checkbox">
						<input type="checkbox" value="<%= op %>" name="referred_by[]" />
					</div>
				</div>
				<% if ix%3==2 %>
					<div class="clearfix"></div>
				<% end %>
		<% end %>

		<div class="input third">
			<label>Other:</label>
			<input name="referred_by[]" type="text" id="other" value="" />
		</div>
		<div class="clearfix"></div>
	</fieldset>

	<fieldset>
		<legend>Please select the residence you are interested in</legend>
		<%
			ops = []
			
			ops << ["1 Bedroom","1 Bedroom Apartment<br />approx XXX m<sup>2</sup>"]
			ops << ["2 Bedroom","2 Bedroom Apartment<br />approx XXX m<sup>2</sup>"]
			ops << ["3 Bedroom","3 Bedroom Apartment<br />approx XXX m<sup>2</sup>"]
			
			ops << ["Terrace","Terrace Homes<br />approx XXX m<sup>2</sup>"]
			ops << ["Podium Penthouse","Podium Penthouse<br />approx XXX m<sup>2</sup>"]
			ops << ["Sky Homes","Sky Homes<br />approx XXX m<sup>2</sup>"]
			
			ops << ["Penthouse","Penthouse<br />approx XXX m<sup>2</sup>"]
		%>
		<% ops.each_with_index do |op,ix| %>
			<div class="third checkbox">
				<div class="faux_checkbox">
					<input type="checkbox" value="<%= op[0] %>" name="property_type[]" />
				</div>
				<label><%= op[1] %></label>
			</div>
			<% if ix%3==2 %>
				<div class="clearfix"></div>
			<% end %>
		<% end %>
	</fieldset>


</form>